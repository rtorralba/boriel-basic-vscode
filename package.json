{
    "homepage": "https://github.com/rtorralba/zx-basic-vscode#readme",
    "name": "zx-basic-lsp-client",
    "displayName": "ZX Basic LSP Client",
    "description": "Cliente LSP para ZX Basic de Boriel",
    "version": "1.0.0",
    "author": "Ra√ºl Torralba (Juntelart)",
    "license": "MIT",
    "repository": {
      "type": "git",
      "url": "https://github.com/rtorralba/zx-basic-vscode.git"
    },
    "bugs": {
      "url": "https://github.com/rtorralba/zx-basic-vscode/issues"
    },
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages"
    ],
    "activationEvents": [
        "onLanguage:zx-basic"
    ],
    "main": "./extension.js",
    "contributes": {
        "languages": [
            {
                "id": "zxbasic",
                "aliases": [
                    "ZX Basic",
                    "zx-basic"
                ],
                "extensions": [
                    ".bas"
                ],
                "configuration": "./language-configuration.json"
            }
        ],
        "grammars": [
            {
                "language": "zxbasic",
                "scopeName": "source.zxbasic",
                "path": "./zxbasic.tmLanguage.json"
            }
        ]
    },
    "dependencies": {
        "ignore": "^7.0.3",
        "vscode-languageclient": "^8.1.0",
        "zx-basic-lsp": "^1.0.1"
    }
}
